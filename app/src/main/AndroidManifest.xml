<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Camera permission for AR scanning -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="true" />

    <!-- Location permissions for habitat zones -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".GoopApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GoopOnTheGo"
        tools:targetApi="31">

        <!-- Main/Home Activity -->
        <activity
            android:name=".ui.home.HomeActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- AR Scanner Activity -->
        <activity
            android:name=".ui.ar.ARScanActivity"
            android:screenOrientation="portrait"
            android:exported="false" />

        <!-- Collection Activity -->
        <activity
            android:name=".ui.collection.CollectionActivity"
            android:screenOrientation="portrait"
            android:exported="false" />

        <!-- Creature Detail Activity -->
        <activity
            android:name=".ui.collection.CreatureDetailActivity"
            android:screenOrientation="portrait"
            android:exported="false" />

        <!-- Evolution Activity -->
        <activity
            android:name=".ui.evolution.EvolutionActivity"
            android:screenOrientation="portrait"
            android:exported="false" />

        <!-- Fusion Activity -->
        <activity
            android:name=".ui.evolution.FusionActivity"
            android:screenOrientation="portrait"
            android:exported="false" />

        <!-- Habitat Map Activity -->
        <activity
            android:name=".ui.map.HabitatMapActivity"
            android:screenOrientation="portrait"
            android:exported="false" />

        <!-- Achievements Activity -->
        <activity
            android:name=".ui.achievements.AchievementsActivity"
            android:screenOrientation="portrait"
            android:exported="false" />

        <!-- Goopdex Activity -->
        <activity
            android:name=".ui.collection.GoopdexActivity"
            android:screenOrientation="portrait"
            android:exported="false" />

    </application>

</manifest>
